        <$macrocall $name="action-InsertTwoWay-New-WithID" tiddler-Before="""$tiddler-Before$""" tiddler-In="""$tiddler-In$""" />
      </$list>
    </$list>
  </$vars>
\end
\define action-InsertTwoWay-New-WithDefault(tiddler-Before, tiddler-In)
